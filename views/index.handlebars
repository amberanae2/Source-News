<div class="jumbotron jumbotron-fluid">
  <div class="container">
   <h1 class="display-4">Source News</h1>
    <p class="lead">All Of Your News In One Place!</p>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    {{#each article}}
    <div class="panel panel-primary">
      <div class="panel-heading row">
        <div class="col-xs-9">
         <h3 class="panel-title pull-left">{{this.title}}</h3>
      </div> 
    </div>
  </div>
    {{/each}}
  </div>
</div>
</div>	

<div class="row">
  <div class="col-md-12">
  {{#each articles}}
    <div class="panel panel-primary">
      <div class="panel-heading row">
       <div class="col-xs-6">
        <h3 class="panel-title pull-left">{{this.title}}</h3>
      </div>
        <div class="col-xs-3">
         <button id="modalbutton" type="submit" class="btn btn-default pull-right" data-toggle="modal" data-id={{this.id}} data-target="#myModal">ARTICLE NOTES</button>
          </div>
         <div class="col-xs-3">
          <form action="/delete/{{this.id}}?_method=DELETE method="POST">
         
              <div class="panel-body">
                <p>{{this.link}}</p>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
				